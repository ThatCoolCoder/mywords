@page
@model SignUpModel
@namespace Pages

<div class="d-flex flex-column justify-content-center align-items-center h-100">
    <h3 class="mb-3">Sign up to MyWords</h3>
    <div class="p-3 shadow-lg form-box ">
        <form method="post">
            <p class="text-danger mb-3" role="alert">@Html.ValidationMessage("error")</p>

            <div class="mb-3 d-flex gap-3">
                <div class="form-floating p-0 flex-grow-1">
                    <input asp-for="Input.GivenName" class="form-control" autocomplete="off" aria-required="true" placeholder="John" />
                    <label asp-for="Input.GivenName" class="form-label">First Name</label>
                    <span asp-validation-for="Input.GivenName" class="text-danger"></span>
                </div>
                <div class="form-floating p-0 flex-grow-1">
                    <input asp-for="Input.FamilyName" class="form-control" autocomplete="off" aria-required="true" placeholder="Doe" />
                    <label asp-for="Input.FamilyName" class="form-label">Last Name</label>
                    <span asp-validation-for="Input.FamilyName" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="off" aria-required="true" placeholder="name@example.com" type="email" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control"aria-required="true" placeholder="Confirm password" />
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @* <div class="checkbox mb-3">
                <label asp-for="Input.StayLoggedIn" class="form-label">
                    <input class="form-check-input" asp-for="Input.StayLoggedIn" />
                    @Html.DisplayNameFor(m => m.Input.StayLoggedIn)
                </label>
            </div> *@
            <div class="d-flex justify-content-center mb-3">
                <button id="login-submit" type="submit" class="mw-50 btn btn-lg btn-primary">Create account</button>
            </div>
        
            <div class="d-flex justify-content-center">
                <a href="Login">Back to login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
